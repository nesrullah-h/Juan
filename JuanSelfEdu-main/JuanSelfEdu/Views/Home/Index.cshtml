        <section id="brands">
            <div class="container">
                <div class="row">
                    <div class="brand-items">
                       @if (Model.Brand.Count()>0)
                      {
                          @foreach (var item in Model.Brand)
                         {
                              <img src="~/images/brand/@item.Image" alt="">
                         }
                      }
                    </div>
                </div>
            </div>
        </section>