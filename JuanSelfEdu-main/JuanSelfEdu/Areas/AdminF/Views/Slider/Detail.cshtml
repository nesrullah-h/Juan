@model Slider
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Adminf/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
    count++;
}


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"></h4>
                <p class="card-description">
                    <a asp-controller="slider" asp-action="Create" class="btn btn-primary">Create</a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Count</th>
                                    <th>Image</th>
                                    <th>Title</th>
                                    <th>Subtitle</th>
                                    <th>Desc</th>
                                </tr>
                            </thead>
                            <tbody>


                                <tr>
                                    <td>@count</td>
                                    <td><img style="width:200px;height:50px;" src="~/images/slider/@Model.Image" /></td>
                                    <td>@Model.Title</td>
                                    <td>@Model.Subtitle</td>
                                    <td>@Model.Desc</td>

                                </tr>


                            </tbody>
                        </table>

                    </div>
            </div>
        </div>
    </div>
</div>


